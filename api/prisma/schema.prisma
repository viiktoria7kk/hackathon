generator client {
  provider = "prisma-client-js"
  binaryTargets = [ "native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  VOLUNTEER
}

enum Categories {
  PSYCHOLOGICAL_SUPPORT
  HUMANITARIAN_AID
  LEGAL_ASSISTANCE
  HOTLINE_SERVICES
  MEDICAL_HELP
  INITIATIVES_AND_PROGRAMS
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  password String
  email String
  phone String?
  bio String?
  role       Roles    @default(USER)
  avatar String?
  posts Posts[]
  
  @@map("users")
}

model Posts {
  id String @id @default(uuid())
  title String
  description String
  content String
  category Categories
  isActive Boolean @default(true) @map("is_active")
  user_id String
  createdAt DateTime @default(now()) @map("created_at")
  userId String
  user User @relation(fields: [userId], references: [id])

  @@map("posts")
}
