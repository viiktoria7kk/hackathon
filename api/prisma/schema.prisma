generator client {
  provider = "prisma-client-js"
  binaryTargets = [ "native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  phone String
  isVolunteer Boolean
  avatar String
  email String @unique
  posts_id Post[]

  @@map("users")
}

model Post {
  id String @id @default(uuid())
  title String
  description String
  content String
  location String
  created_data DateTime
  user_id String
  user User @relation(fields: [user_id], references: [id])

  @@map("posts")
}